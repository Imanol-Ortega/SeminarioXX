---
import { speakersData } from "../lib/speakears";
import DisertanteCard from "./DisertanteCard.astro";
---

<section
  id="disertantes"
  class="flex h-full w-full flex-col items-center justify-start px-4 py-8"
>
  <h2 class="mb-8 text-center text-2xl font-bold text-white sm:text-4xl">
    Disertantes
  </h2>
  <div class="flex w-full max-w-4xl flex-col gap-6">
    {
      speakersData.map((speaker) => (
        <DisertanteCard
          name={speaker.name}
          description={speaker.description}
          image={speaker.image}
          linkedin={speaker.linkedin}
          instagram={speaker.instagram}
          revealed={speaker.revealed}
        />
      ))
    }
  </div>
</section>
