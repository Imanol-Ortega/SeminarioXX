---
import CuentaAtras from "../components/CuentaAtras.astro";
import Calendar from "../icons/Calendar.astro";
import MapMaker from "../icons/MapMaker.astro";
---

<section
  id="inicio"
  class="flex h-screen flex-col items-center justify-center px-4 text-amber-50"
>
  <div class="mb-8 flex flex-col items-center justify-between text-center">
    <div class="font-bold-[600] text-4xl text-gray-200 sm:mt-10 sm:text-6xl">
      <h1 class="">Seminario Tecnológico Informático</h1>
      <p class="text-gray-200">
        Edición <span class="text-5xl text-[#4287f5] sm:text-7xl">XX</span>
      </p>
    </div>
    <div
      class="sm:[font-bold-[600] mt-6] mt-6 flex flex-col items-center justify-center gap-6 text-lg sm:text-2xl/[32px]"
    >
      <span class="flex items-center gap-2"
        ><MapMaker />
        <p class="text-gray-200">Universidad Católica, Campus Itapúa</p></span
      >
      <span class="mt-2 flex items-center gap-2"
        ><Calendar />
        <p class="ml-2 text-center text-gray-200">10 de Mayo</p></span
      >
    </div>
