---
import Calendar from "../icons/Calendar.astro";
import MapMaker from "../icons/MapMaker.astro";
import CuentaAtras from "../components/CuentaAtras.astro";
---

<section
  id="inicio"
  class="flex h-screen flex-col items-center justify-center px-4 text-amber-50"
>
  <div class="mb-8 text-center flex flex-col justify-between items-center">
    <div class="font-bold-[600] text-4xl sm:text-6xl text-gray-200">

      <h1 class="">Seminario Tecnológico Informático</h1>
      <p class="text-gray-200">
        Edición <span class="text-5xl sm:text-7xl text-[#4287f5]">XX</span>
      </p>
    </div>
    <div
      class="mt-6 flex flex-col sm:[font-bold-[600] items-center justify-center gap-6 mt-6] text-lg sm:text-2xl/[32px]"
    >
      <span class="flex items-center gap-2"
        ><MapMaker />
        <p class="text-gray-200">
          Universidad Católica, Campus Itapúa
        </p></span
      >
      <span class="flex items-center gap-2 mt-2"
        ><Calendar /> <p class="ml-2 text-gray-200 text-center">10 de Mayo</p></span
      >
    </div>
    <a
      href="#"
      class="mt-10 sm:mt-2 font-poppins rounded-[30px] border-2 border-white px-6 py-2 text-sm sm:text-[13px] font-bold text-white uppercase hover:border-[#4287f5] hover:text-[#4287f5]"
      >Obtenga su entrada</a
    >&nbsp;
    <div class="mt-20 w-full"><CuentaAtras /></div>
  </div>
</section>
